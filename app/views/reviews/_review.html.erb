<div class="bg-white rounded-lg shadow p-4 mb-3">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <div class="flex items-center mb-2">
        <span class="font-semibold text-gray-900"><%= review.user.full_name %></span>
        <span class="ml-2">
          <% review.rating.times do %>
            <span class="text-yellow-400">★</span>
          <% end %>
          <% (5 - review.rating).times do %>
            <span class="text-gray-300">★</span>
          <% end %>
        </span>
        <span class="text-gray-500 text-sm ml-2"><%= time_ago_in_words(review.created_at) %> ago</span>
      </div>
      <% if review.comment.present? %>
        <p class="text-gray-700"><%= review.comment %></p>
      <% end %>
    </div>
    <% if user_signed_in? && (review.user == current_user || current_user.admin?) %>
      <%= button_to event_review_path(review.event, review),
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "text-red-600 hover:text-red-800 text-sm" do %>
        Delete
      <% end %>
    <% end %>
  </div>
</div>
