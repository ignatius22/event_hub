<div class="bg-gray-50 rounded-lg p-4 mb-6">
  <h3 class="text-lg font-semibold mb-3">Write a Review</h3>
  <%= form_with(model: [@event, @review], local: true, class: "space-y-4") do |form| %>
    <div>
      <%= form.label :rating, "Rating", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex space-x-2">
        <% (1..5).each do |rating| %>
          <%= form.radio_button :rating, rating, class: "hidden rating-radio" %>
          <%= form.label "rating_#{rating}", "â˜…", class: "text-3xl cursor-pointer text-gray-300 hover:text-yellow-400" %>
        <% end %>
      </div>
    </div>
    <div>
      <%= form.label :comment, "Comment (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :comment,
          rows: 3,
          placeholder: "Share your experience...",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <%= form.submit "Submit Review",
          class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
