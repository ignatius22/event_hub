<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Popular Tags</h1>

  <div class="flex flex-wrap gap-3">
    <% @tags.each do |tag| %>
      <%= link_to tag_path(tag.slug), class: "inline-block bg-blue-100 text-blue-800 px-4 py-2 rounded-full hover:bg-blue-200 transition" do %>
        <%= tag.name %>
        <span class="text-blue-600 font-semibold ml-1">(<%= tag.events.published.count %>)</span>
      <% end %>
    <% end %>
  </div>
</div>
