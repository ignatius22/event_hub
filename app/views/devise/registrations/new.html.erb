<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-warm-50 to-primary-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-warm-900">
        Create your account
      </h2>
      <p class="mt-2 text-center text-sm text-warm-600">
        Join <span class="text-primary-600 font-medium">EventHub</span> to discover and organize events
      </p>
    </div>

    <div class="bg-white p-8 rounded-xl shadow-soft">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= f.label :first_name, class: "block text-sm font-medium text-warm-700" %>
              <%= f.text_field :first_name, required: true, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "First name" %>
            </div>

            <div>
              <%= f.label :last_name, class: "block text-sm font-medium text-warm-700" %>
              <%= f.text_field :last_name, required: true, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Last name" %>
            </div>
          </div>

          <div>
            <%= f.label :email, class: "block text-sm font-medium text-warm-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Email address" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-warm-700" %>
            <% if @minimum_password_length %>
              <span class="text-xs text-warm-500">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", required: true, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Password" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-warm-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Confirm password" %>
          </div>

          <div>
            <%= f.label :role, "I want to", class: "block text-sm font-medium text-warm-700" %>
            <%= f.select :role, [["Attend events", "attendee"], ["Organize events", "organizer"]], {}, class: "mt-1 block w-full pl-3 pr-10 py-2.5 text-base border-warm-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-lg transition-colors" %>
          </div>

          <div>
            <%= f.label :bio, "Bio (optional)", class: "block text-sm font-medium text-warm-700" %>
            <%= f.text_area :bio, rows: 3, class: "mt-1 appearance-none relative block w-full px-3 py-2.5 border border-warm-300 placeholder-warm-400 text-warm-900 rounded-lg focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Tell us a bit about yourself..." %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign up", class: "group relative w-full flex justify-center py-2.5 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer shadow-sm hover:shadow-md transition-all" %>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <p class="text-sm text-warm-600">
        Already have an account?
        <%= link_to "Sign in", new_session_path(resource_name), class: "font-medium text-primary-600 hover:text-primary-500 transition-colors" %>
      </p>
    </div>
  </div>
</div>
