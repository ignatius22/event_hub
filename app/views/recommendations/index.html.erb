<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-2">Recommended Events</h1>
  <p class="text-gray-600 mb-6">Based on your interests and activity</p>

  <% if @recommended_events.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @recommended_events.each do |event| %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">
              <%= link_to event.title, event_path(event), class: "text-blue-600 hover:text-blue-800" %>
            </h3>
            <p class="text-gray-600 text-sm mb-2"><%= event.category.name %></p>
            <p class="text-gray-700 mb-4"><%= truncate(event.description, length: 100) %></p>
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= event.starts_at.strftime("%b %d, %Y") %>
            </div>
            <div class="flex items-center text-sm text-gray-500">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <%= event.available_spots %> spots available
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No recommendations available yet. Register for some events to get personalized recommendations!</p>
  <% end %>
</div>
