<%= form_with(model: event, local: true, class: "space-y-6", data: { controller: "form" }) do |f| %>
  <% if event.errors.any? %>
    <div class="bg-rose-50 border border-rose-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-rose-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-rose-800">
            There were <%= pluralize(event.errors.count, "error") %> with your submission
          </h3>
          <div class="mt-2 text-sm text-rose-700">
            <ul class="list-disc pl-5 space-y-1">
              <% event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-warm-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Enter event title" %>
  </div>

  <div>
    <%= f.label :category_id, "Category", class: "block text-sm font-medium text-warm-700" %>
    <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "Select a category" }, class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-warm-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-lg transition-colors" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-warm-700" %>
    <div class="mt-1" data-controller="character-counter">
      <%= f.text_area :description, rows: 6, class: "block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "Describe your event...", data: { character_counter_target: "input", action: "input->character-counter#count" } %>
      <p class="mt-1 text-sm text-warm-500">
        <span data-character-counter-target="count"><%= event.description&.length || 0 %></span>/5000 characters
      </p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :location, "Venue Name", class: "block text-sm font-medium text-warm-700" %>
      <%= f.text_field :location, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "e.g., Central Park" %>
    </div>

    <div>
      <%= f.label :address, "Full Address", class: "block text-sm font-medium text-warm-700" %>
      <%= f.text_field :address, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "e.g., 123 Main St, New York, NY 10001" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :starts_at, "Start Date & Time", class: "block text-sm font-medium text-warm-700" %>
      <%= f.datetime_local_field :starts_at, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors" %>
    </div>

    <div>
      <%= f.label :ends_at, "End Date & Time", class: "block text-sm font-medium text-warm-700" %>
      <%= f.datetime_local_field :ends_at, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors" %>
    </div>
  </div>

  <div>
    <%= f.label :capacity, "Maximum Attendees", class: "block text-sm font-medium text-warm-700" %>
    <%= f.number_field :capacity, min: 1, max: 10000, class: "mt-1 block w-full border-warm-300 rounded-lg shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm transition-colors", placeholder: "100" %>
  </div>

  <div>
    <%= f.label :cover_image, "Cover Image", class: "block text-sm font-medium text-warm-700" %>
    <div class="mt-1" data-controller="image-preview">
      <% if event.cover_image.attached? %>
        <div class="mb-2">
          <%= image_tag event.cover_image, class: "h-32 w-auto rounded-lg", data: { image_preview_target: "preview" } %>
        </div>
      <% else %>
        <div class="mb-2 hidden" data-image-preview-target="previewContainer">
          <img class="h-32 w-auto rounded-lg" data-image-preview-target="preview">
        </div>
      <% end %>
      <%= f.file_field :cover_image, accept: "image/*", class: "block w-full text-sm text-warm-600 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary-50 file:text-primary-700 hover:file:bg-primary-100 file:transition-colors", data: { image_preview_target: "input", action: "change->image-preview#preview" } %>
    </div>
  </div>

  <% if event.persisted? %>
    <div>
      <%= f.label :status, class: "block text-sm font-medium text-warm-700" %>
      <%= f.select :status, Event.statuses.keys.map { |s| [s.humanize, s] }, {}, class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-warm-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-lg transition-colors" %>
    </div>
  <% end %>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", event.persisted? ? event : events_path, class: "inline-flex items-center px-4 py-2.5 border border-warm-300 shadow-sm text-sm font-medium rounded-lg text-warm-700 bg-white hover:bg-warm-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all" %>
    <%= f.submit event.persisted? ? "Update Event" : "Create Event", class: "inline-flex items-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer shadow-sm hover:shadow-md transition-all" %>
  </div>
<% end %>
