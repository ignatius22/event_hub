<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold leading-tight text-warm-900">My Events</h1>
      <p class="mt-1 text-sm text-warm-600">
        Manage your organized events
      </p>
    </div>
    <div class="mt-4 flex md:mt-0 md:ml-4">
      <%= link_to new_event_path, class: "inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 transition-all hover:shadow-md" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Create Event
      <% end %>
    </div>
  </div>

  <div class="mt-8">
    <% if @events.any? %>
      <div class="bg-white shadow-soft overflow-hidden rounded-xl">
        <ul class="divide-y divide-warm-200">
          <% @events.each do |event| %>
            <li>
              <div class="px-4 py-4 sm:px-6 hover:bg-warm-50 transition-colors">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(event.status) %> mr-2">
                        <%= event.status.humanize %>
                      </span>
                      <%= link_to event.title, event, class: "text-lg font-medium text-primary-600 hover:text-primary-700 truncate transition-colors" %>
                    </div>
                    <div class="mt-2 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                      <div class="mt-2 flex items-center text-sm text-warm-600">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <%= format_datetime(event.starts_at) %>
                      </div>
                      <div class="mt-2 flex items-center text-sm text-warm-600">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        <%= event.registrations.confirmed.count %>/<%= event.capacity %> attendees
                      </div>
                      <div class="mt-2 flex items-center text-sm text-warm-600">
                        <svg class="flex-shrink-0 mr-1.5 h-4 w-4 text-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        <%= event.category.name %>
                      </div>
                    </div>
                  </div>
                  <div class="ml-5 flex-shrink-0 flex space-x-2">
                    <% if event.draft? %>
                      <%= button_to "Publish", publish_event_path(event), method: :patch, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-lg text-white bg-emerald-600 hover:bg-emerald-700 transition-colors" %>
                    <% end %>
                    <%= link_to "Edit", edit_event_path(event), class: "inline-flex items-center px-3 py-1 border border-warm-300 text-xs font-medium rounded-lg text-warm-700 bg-white hover:bg-warm-50 transition-colors" %>
                    <%= button_to "Delete", event_path(event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "inline-flex items-center px-3 py-1 border border-rose-300 text-xs font-medium rounded-lg text-rose-700 bg-white hover:bg-rose-50 transition-colors" %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="mt-8">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-xl shadow-soft">
        <svg class="mx-auto h-12 w-12 text-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-warm-900">No events yet</h3>
        <p class="mt-1 text-sm text-warm-600">Get started by creating a new event.</p>
        <div class="mt-6">
          <%= link_to new_event_path, class: "inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 transition-all hover:shadow-md" do %>
            Create your first event
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
