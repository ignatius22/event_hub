<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold leading-tight text-warm-900">
        Discover Events
      </h1>
      <p class="mt-1 text-sm text-warm-600">
        Find and join amazing events in your community
      </p>
    </div>
    <% if user_signed_in? && current_user.can_create_events? %>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to new_event_path, class: "inline-flex items-center px-4 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all hover:shadow-md" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create Event
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Filters -->
  <div class="mt-6 bg-white shadow-soft rounded-xl p-6">
    <%= form_with url: events_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
      <div>
        <%= f.text_field :search, value: params[:search], placeholder: "Search events...", class: "block w-full pl-3 pr-10 py-2.5 text-base border-warm-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-lg transition-colors" %>
      </div>
      <div>
        <%= f.select :category, options_from_collection_for_select(@categories, :id, :name, params[:category]), { include_blank: "All Categories" }, class: "block w-full pl-3 pr-10 py-2.5 text-base border-warm-300 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm rounded-lg transition-colors" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "w-full inline-flex justify-center py-2.5 px-4 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 cursor-pointer transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- Events Grid -->
  <div class="mt-8">
    <% if @events.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @events.each do |event| %>
          <%= render "event_card", event: event %>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-8">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-xl shadow-soft">
        <svg class="mx-auto h-12 w-12 text-warm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-warm-900">No events found</h3>
        <p class="mt-1 text-sm text-warm-600">
          <% if params[:search].present? || params[:category].present? %>
            Try adjusting your filters to find more events.
          <% else %>
            Check back later for upcoming events.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
