<% if user_signed_in? %>
  <% if registration.present? %>
    <div class="space-y-3">
      <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-3">
        <div class="flex">
          <svg class="h-5 w-5 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <div class="ml-3">
            <p class="text-sm font-medium text-emerald-800">
              <% if registration.confirmed? %>
                You're registered!
              <% elsif registration.waitlisted? %>
                You're on the waitlist
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <%= button_to "Cancel Registration", registration_path(registration), method: :delete, data: { confirm: "Are you sure you want to cancel your registration?" }, class: "w-full inline-flex justify-center items-center px-4 py-2.5 border border-rose-300 shadow-sm text-sm font-medium rounded-lg text-rose-700 bg-white hover:bg-rose-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500 transition-colors" %>
    </div>
  <% elsif event.can_register? %>
    <%= button_to event_registrations_path(event), class: "w-full inline-flex justify-center items-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 shadow-sm hover:shadow-md transition-all" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
      </svg>
      Register for Event
    <% end %>
  <% elsif event.full? %>
    <div class="text-center">
      <p class="text-sm text-rose-600 font-medium">Event is full</p>
      <p class="text-xs text-warm-500 mt-1">Check back later for cancellations</p>
    </div>
  <% elsif !event.published? %>
    <div class="text-center">
      <p class="text-sm text-warm-600">Event not yet published</p>
    </div>
  <% else %>
    <div class="text-center">
      <p class="text-sm text-warm-600">Registration closed</p>
    </div>
  <% end %>
<% else %>
  <div class="text-center space-y-3">
    <p class="text-sm text-warm-600">Sign in to register for this event</p>
    <%= link_to "Sign In", new_user_session_path, class: "w-full inline-flex justify-center items-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 shadow-sm hover:shadow-md transition-all" %>
  </div>
<% end %>
